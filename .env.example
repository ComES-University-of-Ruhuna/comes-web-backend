# ============================================
# ComES Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# Replace with your MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/comes_db
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Refresh Token
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# Frontend URL (for CORS) - This is the ONLY place to change the frontend URL
FRONTEND_URL=http://localhost:5173

# Email Configuration (for contact form, newsletters, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=ComES <noreply@comes.lk>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Admin Configuration
ADMIN_EMAIL=admin@comes.lk
